<resources>

    <!-- Base application theme. -->
    <style name="ConnectTheme" parent="UIKit.ToolbarActivity">
    </style>

    <style name="Button">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="ButtonPositive" parent="Button">
        <item name="android:text">Connect</item>
        <item name="android:background">@drawable/btn_bg_positive</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonNeutral" parent="Button">
        <item name="android:text">Forget</item>
        <item name="android:background">@drawable/btn_bg_neutral</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonNegative" parent="Button">
        <item name="android:text">Modify</item>
        <item name="android:background">@drawable/btn_bg_negative</item>
        <item name="android:textColor">@color/oneEduGrey</item>
    </style>

    <style name="screen_title">
        <item name="android:layout_width">@dimen/access_point_width</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="wifi_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginStart">16dip</item>
        <item name="android:layout_marginEnd">16dip</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="wifi_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="wifi_item_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="wifi_item_edit_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="met_primaryColor">@color/oneEduBlue</item>
        <item name="met_floatingLabel">highlight</item>
    </style>

    <style name="wifi_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wifi_section_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="info_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingEnd">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="entry_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
    </style>

    <style name="info_label" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="info_small" parent="TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="info_value" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
